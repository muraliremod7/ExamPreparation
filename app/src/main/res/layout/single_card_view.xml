<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:visibility="gone"
                android:textColor="#ED1B24"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/examname"
                android:text="IBPS RRB Clerks-VI MAINS - Model Test 60"/>
            <TextView
                android:textColor="#ED1B24"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/examdesc"
                android:text="IBPS RRB Clerks-VI MAINS - Model Test 60"/>
            <TextView
                android:padding="5dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="right"
                android:text="02-November-2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/examdate"/>
            <View
                android:background="@color/white_greyish"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Total Questions"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="200"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/examquestions"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/white_greyish"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Total Duration"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="120"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/examduration"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/white_greyish"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Total Marks"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="200"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/exammarks"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/white_greyish"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <Button
                android:background="#00C853"
                android:layout_marginTop="10dp"
                android:id="@+id/startexam"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Start Now"
                android:textColor="#ffff"
                android:textStyle="bold"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>