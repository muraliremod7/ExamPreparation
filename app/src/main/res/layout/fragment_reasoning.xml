<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_greyish">
    <LinearLayout
    android:layout_above="@+id/buttons"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/white_greyish">
        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/qIddd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/circle"
                        android:padding="10dp"
                        android:text="1"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="00:00" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@color/white_greyish" />

                    <TextView
                        android:id="@+id/psmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="+0.25" />

                    <TextView
                        android:id="@+id/ngmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="-0.25" />
                </LinearLayout>

                <TextView
                    android:id="@+id/question_directionnn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <WebView
                    android:id="@+id/webbb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:visibility="gone"></WebView>

                <ImageView
                    android:id="@+id/image_directionnn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/questionnn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/image_questionnn"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingRight="10dp"
                    android:visibility="gone" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@color/white_greyish" />


                <LinearLayout
                    android:id="@+id/layout1"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/opt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:id="@+id/choi1_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:background="@color/white_greyish" />

                <LinearLayout
                    android:id="@+id/layout2"
                    android:clickable="true"
                    android:background="@drawable/list_color_selector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/opt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:id="@+id/choi2_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:background="@color/white_greyish" />

                <LinearLayout
                    android:id="@+id/layout3"
                    android:clickable="true"
                    android:background="@drawable/list_color_selector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/opt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:id="@+id/choi3_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:background="@color/white_greyish" />

                <LinearLayout
                    android:id="@+id/layout4"
                    android:clickable="true"
                    android:background="@drawable/list_color_selector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/opt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:id="@+id/choi4_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:background="@color/white_greyish" />

                <LinearLayout
                    android:id="@+id/layout5"
                    android:clickable="true"
                    android:background="@drawable/list_color_selector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/opt5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:id="@+id/choi5_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white_greyish"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgleft"
            android:src="@drawable/left"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgright"
            android:src="@drawable/right"/>
    </RelativeLayout>

</RelativeLayout>
